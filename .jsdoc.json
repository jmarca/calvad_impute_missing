{
    "source": {
        "include": [ "./index.js","./lib"],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "opts": {
        "encoding": "utf8",               // same as -e utf8
        "destination": "./doc/",          // same as -d ./out/
        "recurse": true,                  // same as -r
        "template":"./node_modules/ink-docstrap/template",
        "package":"package.json",
        "readme": "README.md"
    }
}
